  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>2PickUp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <style>body{background-color: #006699;}</style>
  </head>
  <body>
    <div class="wrapper">

      <div class="nav">
        <% if logged_in? %>
          <a href="/items">All items</a>
          <a href="/items/new">Create an item</a>
          <a href="/users/<%= current_user.id %>">Profile</a>
          <a href="/logout">Log out</a>
        <% end %>
      </div>

      <% if flash[:message] %>
        <h3 style="color:green;"><%= flash[:message] %></h3>
      <% end %>

      <% if flash[:error] %>
        <h3 style="color:red;"><%= flash[:error] %></h3>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>2PickUp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
