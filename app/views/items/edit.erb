<h1>Edit item</h1>

<form class="" action="/items/<%= @item.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @item.title %>">

  <div class="search">
  	<script async src="https://cse.google.com/cse.js?cx=001483703512988866929:xlbmcpklwqy"></script>
	<div class="gcse-search"></div>
  </div>

  <label for="notes">Notes:</label>
  <textarea name="notes" style="width:auto; height:auto;"><%= @item.notes %></textarea>
  
  <input type="submit" name="" value="Edit item">
</form>